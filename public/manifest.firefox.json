{
	"$schema": "https://json.schemastore.org/webextension",
	"manifest_version": 3,
	"name": "Dissatisfied",
	"description": "Get rid of parts of UI, when focussing on content.",
	"version": "0.1.0",
	"author": "Pronsh",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"homepage_url": "https://example.com/me/myextension",
	"browser_specific_settings": {
		"gecko": {
			"id": "dissatisfied@pronsh.dev",
			"strict_min_version": "112.0"
		}
	},
	"permissions": ["scripting", "storage", "tabs", "activeTab"],
	"host_permissions": [
		"*://www.youtube.com/*",
		"*://m.youtube.com/*",
		"*://youtu.be/*",
		"*://twitter.com/*",
		"*://www.twitter.com/*",
		"*://x.com/*",
		"*://www.x.com/*"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"action": {
		"default_icon": "icon128.png",
		"default_title": "Dissatisfied"
	},
	"commands": {
		"toggle-youtube-style": {
			"suggested_key": {
				"default": "Alt+Shift+Y",
				"mac": "Alt+Shift+Y"
			},
			"description": "Toggle YouTube styling ON/OFF"
		},
		"toggle-twitter-style": {
			"suggested_key": {
				"default": "Alt+Shift+X",
				"mac": "Alt+Shift+X"
			},
			"description": "Toggle Twitter styling ON/OFF"
		}
	},
	"options_ui": {
		"page": "ui/options/index.html",
		"open_in_tab": true
	},
	"content_scripts": [
		{
			"matches": [
				"*://www.youtube.com/*",
				"*://m.youtube.com/*",
				"*://youtu.be/*"
			],
			"js": ["content-youtube.js"],
			"run_at": "document_end"
		},
		{
			"matches": [
				"*://twitter.com/*",
				"*://www.twitter.com/*",
				"*://x.com/*",
				"*://www.x.com/*"
			],
			"js": ["content-twitter.js"],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["styles/youtube.css", "styles/twitter.css"],
			"matches": [
				"*://www.youtube.com/*",
				"*://m.youtube.com/*",
				"*://youtu.be/*",
				"*://twitter.com/*",
				"*://www.twitter.com/*",
				"*://x.com/*",
				"*://www.x.com/*"
			]
		}
	]
}
