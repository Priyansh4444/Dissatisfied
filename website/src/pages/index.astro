---
const title = 'Dissatisfied';
const description = 'Focus without the noise.';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />
    <style>
      /* ========== Base Styles ========== */
      :root {
        color-scheme: dark;
        --font-serif: "Instrument Serif", ui-serif, system-ui, -apple-system, "Segoe UI", serif;
        --border-color: rgba(255, 255, 255, 0.12);
        --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.45);
      }

      html,
      body {
        height: 100%;
        overflow: hidden;
      }

      body {
        margin: 0;
        background: #000;
        color: #fff;
        display: grid;
        place-items: center;
        min-height: 100vh;
      }

      /* ========== Layout ========== */
      main.layout {
        position: relative;
        display: grid;
        place-items: center;
        min-height: 100vh;
      }

      /* ========== Headline ========== */
      h1.headline {
        position: relative;
        z-index: 30;
        font-family: var(--font-serif);
        font-size: clamp(2rem, 7vw, 4rem);
        letter-spacing: -0.02em;
        line-height: 1.1;
        text-align: center;
        margin: 0;
        padding: 2rem;
        transition: text-shadow 200ms ease, color 200ms ease;
      }

      h1.headline:hover {
        text-shadow: 0 0 8px rgba(255, 255, 255, 0.5);
      }

      body.focus-hover h1.headline {
        color: #fff;
        text-shadow:
          0 0 12px rgba(255, 255, 255, 0.9),
          0 0 28px rgba(134, 200, 255, 0.8),
          0 0 48px rgba(134, 200, 255, 0.6);
      }

      /* ========== Page Content ========== */
      .page-content {
        position: relative;
        display: grid;
        place-items: center;
        gap: 2rem;
        transition: opacity 120ms ease;
        will-change: opacity;
      }

      body.focus-hover .page-content {
        opacity: 0;
        pointer-events: none;
      }

      /* ========== Screenshots ========== */
      .screenshots {
        position: fixed;
        inset: 0;
        z-index: 5;
        display: grid;
        place-items: center;
        pointer-events: none;
      }

      .screenshots:hover {
        z-index: 12;
      }

      .screenshots-inner {
        position: relative;
        width: min(90vw, 1000px);
        height: min(65vh, 680px);
        transform: translateY(12vh);
      }

      .screenshots img {
        position: absolute;
        top: 50%;
        left: 50%;
        width: min(50vw, 560px);
        max-width: 100%;
        transform-origin: center;
        transform: translate(var(--tx, -50%), var(--ty, -50%)) rotate(var(--rot, 0deg));
        border-radius: 12px;
        box-shadow:
          0 10px 30px rgba(0, 0, 0, 0.6),
          0 0 0 1px rgba(255, 255, 255, 0.06);
        transition: transform 200ms cubic-bezier(0.4, 0, 0.2, 1),
                    box-shadow 200ms cubic-bezier(0.4, 0, 0.2, 1);
        filter: saturate(1.05) contrast(1.05);
        pointer-events: auto;
        z-index: 6;
      }

      .screenshots img:first-child {
        --tx: -78%;
        --ty: -38%;
        --rot: -10deg;
      }

      .screenshots img:last-child {
        --tx: -22%;
        --ty: -62%;
        --rot: 10deg;
      }

      .screenshots img:hover {
        transform: translate(-50%, -50%) scale(1.05) rotate(0deg);
        box-shadow:
          0 14px 40px rgba(0, 0, 0, 0.7),
          0 0 0 1px rgba(255, 255, 255, 0.12);
        z-index: 15;
      }

      /* ========== Footer & Badge ========== */
      .footer {
        position: fixed;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 30;
        text-align: center;
        margin: 0;
        padding: 0.6rem 0.9rem;
        background: #000;
        border: 1px solid var(--border-color);
        border-radius: 6px;
        display: inline-block;
        box-shadow: var(--card-shadow);
      }

      .footer a {
        color: inherit;
        text-decoration: underline;
        text-underline-offset: 3px;
      }

      .love-badge {
        position: fixed;
        bottom: 5.25rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 30;
        font-family: var(--font-serif);
        font-size: 0.95rem;
        letter-spacing: 0.02em;
        padding: 0.6rem 0.9rem;
        background: #000;
        border: 1px solid var(--border-color);
        border-radius: 6px;
        box-shadow: var(--card-shadow);
        display: inline-block;
        margin: 0;
      }
    </style>
  </head>
  <body>
    <main class="layout">
      <h1 class="headline">Dissatisfied — Focus without the noise.</h1>

      <div class="page-content">
        <div class="screenshots">
          <div class="screenshots-inner">
            <img
              src="/screenshot-focus-mode-1.png"
              alt="Screenshot of Dissatisfied focus mode 1"
            />
            <img
              src="/screenshot-focus-mode-2.png"
              alt="Screenshot of Dissatisfied focus mode 2"
            />
          </div>
        </div>

        <p class="footer">
          <a href="/privacy">Privacy Policy</a>
        </p>

        <div class="love-badge">Made with ❤️</div>
      </div>
    </main>

    <script>
      const headline = document.querySelector('h1.headline')!;

      headline.addEventListener('mouseenter', () => {
        document.body.classList.add('focus-hover');
      });

      headline.addEventListener('mouseleave', () => {
        document.body.classList.remove('focus-hover');
      });
    </script>
  </body>
</html>
