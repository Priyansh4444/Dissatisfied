{
	"$schema": "https://json.schemastore.org/webextension",
	"manifest_version": 3,
	"name": "MyExtension",
	"description": "My awesome extension",
	"version": "0.1.0",
	"author": "me",
	"homepage_url": "https://example.com/me/myextension",
	"permissions": ["activeTab", "scripting"],
	"host_permissions": [
		"https://www.youtube.com/*",
		"https://twitter.com/*",
		"https://www.twitter.com/*",
		"https://x.com/*",
		"https://www.x.com/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_icon": "icon.png",
		"default_title": "Dissatisfied"
	},
	"commands": {
		"toggle-youtube-style": {
			"suggested_key": {
				"default": "Ctrl+Shift+Y",
				"mac": "Command+Shift+Y"
			},
			"description": "Toggle YouTube styling ON/OFF"
		},
		"toggle-twitter-style": {
			"suggested_key": {
				"default": "Ctrl+Shift+X",
				"mac": "Command+Shift+X"
			},
			"description": "Toggle Twitter styling ON/OFF"
		}
	},
	"options_ui": {
		"page": "ui/options/index.html",
		"open_in_tab": true
	}
}
